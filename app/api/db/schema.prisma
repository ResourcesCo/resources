// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id        String     @id @default(cuid())
  name      String
  email     String     @unique
  bot       Boolean
  actions Action[]
}

model Page {
  id        String     @id @default(cuid())
  name      String
  path      String     @unique
  body      String
  metadata  Json
  computed  Json
  createdAt DateTime   @default(now())
  actions Action[]
  @@index([name])
}

model Action {
  id        String   @id @default(cuid())
  profile   Profile  @relation(fields: [profileId], references: [id])
  profileId String
  name      String
  path      String
  type      String
  body      String
  metadata  Json
  computed  Json
  createdAt DateTime @default(now())
  page      Page     @relation(fields: [pageId], references: [id])
  pageId    String
}
