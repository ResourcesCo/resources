// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(cuid())
  name    String
  email   String   @unique
  bot     Boolean
  actions Action[]
}

model Page {
  id        String   @id @default(cuid())
  name      String
  path      String   @unique
  body      String
  metadata  Json
  computed  Json
  createdAt DateTime @default(now())
  actions   Action[]

  @@index([name])
}

model Action {
  id        String   @id @default(cuid())
  name      String
  path      String
  type      String
  body      String
  metadata  Json
  computed  Json
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  page      Page     @relation(fields: [pageId], references: [id])
  pageId    String
}
